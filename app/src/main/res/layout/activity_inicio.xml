<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInicio">

    <ImageView
        android:id="@+id/activity_inicio_imgbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/primary"
        android:alpha="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:scaleY="-1"
        android:alpha="0.9"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/activity_inicio_edt_codigo_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/input_round"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:hint="AA12345789BR"
        android:padding="16dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/activity_inicio_btn_buscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_round"
        android:drawableRight="@drawable/ic_search_package"
        android:foregroundTint="@color/black"
        android:text="Buscar"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintTop_toBottomOf="@+id/activity_inicio_edt_codigo_produto" />

    <Button
        android:id="@+id/activity_inicio_btn_sobre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_round"
        android:drawableRight="@drawable/ic_account"
        android:text="Sobre"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintStart_toStartOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintTop_toBottomOf="@+id/activity_inicio_btn_historico" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:drawableRight="@drawable/ic_truck"
        android:drawablePadding="16dp"
        android:text="Consulta Correios"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/activity_inicio_btn_historico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_round"
        android:drawableRight="@drawable/ic_history"
        android:text="HistÃ³rico de buscas"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintStart_toStartOf="@+id/activity_inicio_edt_codigo_produto"
        app:layout_constraintTop_toBottomOf="@+id/activity_inicio_btn_buscar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:scaleX="-1"
        android:src="@drawable/ic_wave_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCopyrightNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_copyright"
        android:drawablePadding="5dp"
        android:text="2021 Apollo Daniel. Some rights reserved."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>