<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <View
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/history_item_round"
        android:padding="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/history_adapter_txt_code"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:text="Code: AA12345789BR"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_code"
            android:drawablePadding="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/history_adapter_txt_data"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_weight="1"
            android:text="Data: 22/22/2222"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_calendary"
            android:drawablePadding="16dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>



</LinearLayout>